	<!-- 상품 등록 -->
	<insert id="addNewProduct"  parameterType="java.util.Map">
		<selectKey resultType="int" keyProperty="product_no" order="BEFORE">
	    	select product_no_seq.nextval from dual
	    </selectKey>
	    <![CDATA[
		    insert into s_product(
			    					product_no, 
			    					cate_parent, 
			    					cate_name, 
			    					product_name, 
			    					product_sort,
			    					origin_price,
			    					sale_price,
			    					product_color,
			    					product_image,
			    					product_credate,
			    					product_content
		    					)
		    			values(
		    					#{product_no},
		    					#{cate_parent},
		    					#{cate_name},
		    					#{product_name},
		    					#{product_sort},
		    					#{origin_price},
		    					#{sale_price},
		    					#{product_color},
		    					#{file_name},
		    					sysdate,
		    					#{product_content}
		    				   )
	    ]]>
	</insert>
	
